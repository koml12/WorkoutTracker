<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mohit31.workouttracker">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/weight"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".activities.WorkoutViewActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".activities.AddExerciseActivity">
        </activity>

        <activity
                android:name=".activities.StartWorkoutActivity"
                android:launchMode="singleInstance">
        </activity>

        <activity
                android:name=".activities.EditExerciseActivity">
        </activity>

        <activity
                android:name=".activities.WorkoutListActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.AddWorkoutActivity">
        </activity>

        <activity
                android:name=".activities.WorkoutSettingsActivity">
        </activity>

        <activity
                android:name=".activities.TrackWorkoutActivity">
        </activity>
    </application>

</manifest>